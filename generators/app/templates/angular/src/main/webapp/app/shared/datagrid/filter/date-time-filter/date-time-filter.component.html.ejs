<div style="width: 360px">
  <p class="p6">{{value.enableAdvancedFilter ? '筛选器' : '日期时间范围'}}</p>
  <br/>
  <div class="date-range row" *ngIf="value.type === dateTimeRangeType" (keyup.enter)="filterFn.open = false">
    <div class="col-sm-12">
      <input type="datetime-local" placeholder="开始日期时间" [(ngModel)]="value.min" (ngModelChange)="submit()"/>
    </div>
    <div class="col-sm-12">
      <input type="datetime-local" placeholder="结束日期时间" [(ngModel)]="value.max" (ngModelChange)="submit()"/>
    </div>
  </div>

  <div class="advanced-filter" *ngIf="value.type === dateTimeAdvancedType" (keyup.enter)="filterFn.open = false">
    <div class="row">
      <div class="col-sm-4">
        <div class="select condition">
          <select [(ngModel)]="value.primarySymbol" (ngModelChange)="submit()">
            <option [value]="null">请选择</option>
            <option value="EQUAL">等于</option>
            <option value="NOT_EQUAL">不等于</option>
            <option value="GREATER_THAN_EQUAL">大于等于</option>
            <option value="LESS_THAN_EQUAL">小于等于</option>
          </select>
        </div>
      </div>
      <div class="col-sm-8">
        <input type="datetime-local" [(ngModel)]="value.primaryValue" (ngModelChange)="submit()"/>
      </div>
    </div>
    <div *ngIf="value.primaryValue">
      <div class="row">
        <div class="col-sm-12">
          <div  class="check-box">
            <div class="radio-inline">
              <input type="radio" name="relationship" id="and-radio-box" value="AND" [(ngModel)]="value.relationship" (ngModelChange)="submit()">
              <label for="and-radio-box">并且</label>
            </div>
            <div class="radio-inline" style="margin-left: 10px">
              <input type="radio" name="relationship" id="or-radio-box" value="OR" [(ngModel)]="value.relationship" (ngModelChange)="submit()">
              <label for="or-radio-box">或者</label>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <div class="select condition">
            <select [(ngModel)]="value.secondarySymbol" (ngModelChange)="submit()">
              <option [value]="null">请选择</option>
              <option value="EQUAL">等于</option>
              <option value="NOT_EQUAL">不等于</option>
              <option value="GREATER_THAN_EQUAL">大于等于</option>
              <option value="LESS_THAN_EQUAL">小于等于</option>
            </select>
          </div>
        </div>
        <div class="col-sm-8">
          <input type="datetime-local" [(ngModel)]="value.secondaryValue" (ngModelChange)="submit()"/>
        </div>
      </div>
    </div>
  </div>

  <div class="foot">
    <div class="toggle-switch">
      <input type="checkbox" id="filter-switch" [(ngModel)]="value.enableAdvancedFilter" (ngModelChange)="submit()">
      <label for="filter-switch" style="line-height: 24px">筛选器</label>
    </div>
  </div>
</div>